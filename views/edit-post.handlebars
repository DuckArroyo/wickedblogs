<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="textarea" value="{{post.title}}" />
      <span>Original title: ({{post.title}})</span>
      <input name="post-title" type="textarea" rows="12" cols="50" value="{{post.blog_post}}" />
      <span>Original Post: ({{post.blog_post}})</span>

    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      {{post.comments.length}} {{format_plural "comment" post.comments.length}}
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

{{!-- Form to handle comments submissions and shows comments --}}
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{!-- Reference the comments.handlebars for the full code --}}
{{> comments post.comments}}
{{/if}}
{{!-- Connects to the comment and upvote logic --}}
{{#if loggedIn}}
<script src="../public/javascript/edit-post.js"></script>
<script src="../public/javascript/delete-post.js"></script>
