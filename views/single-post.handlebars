{{!-- Template for a single post --}}
{{!-- Connects to home-routes.js --}}
<article class="post">
  <div class="title"><h1>{{post.title}}</h1></div>
 <br>
  <div class="comment">{{post.blog_post}}</div>  
</article>
<br>
<article>
  <div class="meta">
    {{post.vote_count}} point(s) by {{post.user.username}} on
    {{post.created_at}}
    |
    {{!-- I think this is whay I need to invoke in the span above. Leave here also though --}}
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

{{!-- Form to handle comments submissions and shows comments --}}
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">I agree!</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>
{{/if}}

{{!-- Connects to the comment and upvote logic --}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}