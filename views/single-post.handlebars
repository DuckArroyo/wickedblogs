{{!-- Template for a single post --}}
{{!-- Connects to home-routes.js --}}

<article class="post">
  <div  class="title"><h1>{{post.title}}</h1></div>
 <br>
  <div class="comment">{{post.blog_post}}</div>  
</article>
<br>
<article>
  <div class="meta">
    {{post.vote_count}} {{format_plural "point" vote_count}} by {{post.user.username}} on {{format_date post.created_at}} {{post.comments.length}} {{format_plural "comment" post.comments.length}}
  </div>
</article>

{{!-- Form to handle comments submissions and shows comments --}}
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">I agree!</button>
  </div>
</form>

{{!-- Reference the comments.handlebars for the full code --}}
{{> comments post.comments}}

{{/if}}

{{!-- Connects to the comment and upvote logic --}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}